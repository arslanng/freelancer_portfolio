<%- include('partials/_header') -%>
        <!-- Portfolio Section-->
        <section class="page-section portfolio" id="portfolio">
            <div class="container">
                <!-- Portfolio Section Heading-->
                <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Portfolio</h2>
                <!-- Icon Divider-->
                <div class="divider-custom">
                    <div class="divider-custom-line"></div>
                    <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                    <div class="divider-custom-line"></div>
                </div>
                <!-- Portfolio Grid Items-->
                <div class="row ">
                    
                    <% for (let i = 0; i < projects.length; i++){ %> 
                    <!-- Portfolio Item-->
                    <div class="col-md-6 col-lg-4 mb-5">
                        <div class="portfolio-item mx-auto" data-bs-toggle="modal" data-bs-target="#portfolioModal<%= projects[i]._id %>">
                            <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                                <div class="portfolio-item-caption-content text-center text-white"><i class="fas fa-search fa-3x"></i></div>
                            </div>
                            <img class="img-fluid" src="<%= projects[i].image %>" alt="..." />
                        </div>
                        <div class="row p-2">
                            <div class="col-6">
                                <a href="#portfolioEditModal<%= projects[i]._id %>" data-bs-toggle="modal">
                                    <button class="btn btn-primary w-100">Edit</button>
                                </a>
                            </div>
                            <div class="col-6">
                                <a href="/<%= projects[i]._id %>?_method=DELETE">
                                    <button class="btn btn-danger w-100" onclick="return confirm('Are You Sure?')">Delete</button>
                                </a>
                            </div>
                        </div>
                    </div>
                    <% } %>

                    <!-- Portfolio Add-->
                    <div class="col-md-6 col-lg-4 mb-5">
                        <div class="portfolio-item mx-auto" data-bs-toggle="modal" data-bs-target="#portfolioModalAdd">
                            <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                                <div class="portfolio-item-caption-content text-center text-white"><i class="fas fa-plus fa-3x"></i></div>
                            </div>
                            <img class="img-fluid" src="assets/img/portfolio/cabin.png" alt="..." />
                            <button class="btn btn-success w-100 mt-1">Add New Project</button>
                        </div>
                        
                    </div>

                </div>
            </div>
        </section>
<%- include('partials/_about') -%>
<%- include('partials/_contact') -%>
<%- include('partials/_footer') -%>
        <!-- Portfolio Modals-->
        <!-- Portfolio Add Modal-->
        <div class="portfolio-modal modal fade" id="portfolioModalAdd" tabindex="-1" aria-labelledby="portfolioModalAdd" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div class="modal-header border-0"><button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button></div>
                    <div class="modal-body text-center pb-5">
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-lg-8">
                                    <!-- Portfolio Modal - Title-->
                                    <h2 class="portfolio-modal-title text-secondary text-uppercase mb-0">Add Project</h2>
                                    <!-- Icon Divider-->
                                    <div class="divider-custom">
                                        <div class="divider-custom-line"></div>
                                        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                                        <div class="divider-custom-line"></div>
                                    </div>

                                    <form method="POST" action="/" encType="multipart/form-data" class="mb-5">
                                        <!-- title input-->
                                        <div class="form-floating mb-3">
                                            <input class="form-control" name="title" type="text" placeholder="Enter your title..." data-sb-validations="required" required/>
                                            <label for="title">Title</label>
                                            <div class="invalid-feedback" data-sb-feedback="title:required">A title is required.</div>
                                        </div>
                                       
                                        <!-- description input-->
                                        <div class="form-floating mb-3">
                                            <textarea class="form-control" name="description" type="text" placeholder="Enter your description here..." style="height: 10rem" data-sb-validations="required"></textarea>
                                            <label for="description">Description</label>
                                            <div class="invalid-feedback" data-sb-feedback="description:required">A description is required.</div>
                                        </div>

                                        <!-- image input-->
                                        <div class="form-floating mb-3">
                                            <input class="form-control" name="image" type="file" placeholder="Enter your image..." data-sb-validations="required" required/>
                                            <label for="image">image</label>
                                            <div class="invalid-feedback" data-sb-feedback="image:required">A title is required.</div>
                                        </div>
                                        <!-- Submit success message-->
                                        <!---->
                                        <!-- This is what your users will see when the form-->
                                        <!-- has successfully submitted-->
                                        <div class="d-none" id="submitSuccessMessage">
                                            <div class="text-center mb-3">
                                                <div class="fw-bolder">Form submission successful!</div>
                                                To activate this form, sign up at
                                                <br />
                                                <a href="https://startbootstrap.com/solution/contact-forms">https://startbootstrap.com/solution/contact-forms</a>
                                            </div>
                                        </div>
                                        <!-- Submit error message-->
                                        <!---->
                                        <!-- This is what your users will see when there is-->
                                        <!-- an error submitting the form-->
                                        <div class="d-none" id="submitErrorMessage"><div class="text-center text-danger mb-3">Error sending message!</div></div>
                                        <!-- Submit Button-->
                                        <button class="btn btn-primary w-100" id="submitButton" type="submit">Send</button>
                                    </form>

                                    <button class="btn btn-primary" data-bs-dismiss="modal">
                                        <i class="fas fa-xmark fa-fw"></i>
                                        Close Window
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% for (let i = 0; i < projects.length; i++){ %> 
        <!-- Portfolio Edit Modal-->
        <div class="portfolio-modal modal fade" id="portfolioEditModal<%= projects[i]._id %>" tabindex="-1" aria-labelledby="portfolioEditModal<%= projects[i]._id  %>" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div class="modal-header border-0"><button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button></div>
                    <div class="modal-body text-center pb-5">
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-lg-8">
                                    <!-- Portfolio Modal - Title-->
                                    <h2 class="portfolio-modal-title text-secondary text-uppercase mb-0">Edit: <%= projects[i].title %></h2>
                                    <!-- Icon Divider-->
                                    <div class="divider-custom">
                                        <div class="divider-custom-line"></div>
                                        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                                        <div class="divider-custom-line"></div>
                                    </div>
                                    <!-- Portfolio Modal - Image-->
                                    <img class="img-fluid rounded mb-5" src="<%= projects[i].image %>" alt="..." />
                                    
                                    <form method="POST" action="/<%= projects[i]._id %>?_method=PUT" class="mb-5">
                                        <!-- title input-->
                                        <div class="form-floating mb-3">
                                            <input class="form-control" name="title" type="text" placeholder="Enter your title..." data-sb-validations="required" value="<%= projects[i].title %>"/>
                                            <label for="title">Title</label>
                                            <div class="invalid-feedback" data-sb-feedback="title:required">A title is required.</div>
                                        </div>
                                       
                                        <!-- description input-->
                                        <div class="form-floating mb-3">
                                            <textarea class="form-control" name="description" type="text" placeholder="Enter your description here..." style="height: 10rem" data-sb-validations="required"><%= projects[i].description %></textarea>
                                            <label for="description">Description</label>
                                            <div class="invalid-feedback" data-sb-feedback="description:required">A description is required.</div>
                                        </div>
                                        <!-- Submit success message-->
                                        <!---->
                                        <!-- This is what your users will see when the form-->
                                        <!-- has successfully submitted-->
                                        <div class="d-none" id="submitSuccessMessage">
                                            <div class="text-center mb-3">
                                                <div class="fw-bolder">Form submission successful!</div>
                                                To activate this form, sign up at
                                                <br />
                                                <a href="https://startbootstrap.com/solution/contact-forms">https://startbootstrap.com/solution/contact-forms</a>
                                            </div>
                                        </div>
                                        <!-- Submit error message-->
                                        <!---->
                                        <!-- This is what your users will see when there is-->
                                        <!-- an error submitting the form-->
                                        <div class="d-none" id="submitErrorMessage"><div class="text-center text-danger mb-3">Error sending message!</div></div>
                                        <!-- Submit Button-->
                                        <button class="btn btn-primary w-100" id="submitButton" type="submit">Save</button>
                                    </form>

                                    <button class="btn btn-primary" data-bs-dismiss="modal">
                                        <i class="fas fa-xmark fa-fw"></i>
                                        Close Window
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
        <% for (let i = 0; i < projects.length; i++){ %> 
        <!-- Portfolio Item Modal-->
        <div class="portfolio-modal modal fade" id="portfolioModal<%= projects[i]._id %>" tabindex="-1" aria-labelledby="portfolioModal<%= projects[i]._id  %>" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div class="modal-header border-0"><button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button></div>
                    <div class="modal-body text-center pb-5">
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-lg-8">
                                    <!-- Portfolio Modal - Title-->
                                    <h2 class="portfolio-modal-title text-secondary text-uppercase mb-0"><%= projects[i].title %></h2>
                                    <!-- Icon Divider-->
                                    <div class="divider-custom">
                                        <div class="divider-custom-line"></div>
                                        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                                        <div class="divider-custom-line"></div>
                                    </div>
                                    <!-- Portfolio Modal - Image-->
                                    <img class="img-fluid rounded mb-5" src="<%= projects[i].image %>" alt="..." />
                                    <!-- Portfolio Modal - Text-->
                                    <p class="mb-4"><%= projects[i].description %></p>
                                    <button class="btn btn-primary" data-bs-dismiss="modal">
                                        <i class="fas fa-xmark fa-fw"></i>
                                        Close Window
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="js/scripts.js"></script>
        <!-- * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *-->
        <!-- * *                               SB Forms JS                               * *-->
